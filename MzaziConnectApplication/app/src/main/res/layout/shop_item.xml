<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/imgSubject"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/tvSubjectName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/shop" />

    <TextView
        android:id="@+id/tvSubjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Utawala New"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/baloobhai2_bold"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imgSubject"
        app:layout_constraintEnd_toEndOf="@+id/imgSubject"
        app:layout_constraintHorizontal_bias="0.281"
        app:layout_constraintStart_toStartOf="@+id/imgSubject"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvShopLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kinca"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:fontFamily="@font/inter_medium"
        app:layout_constraintBottom_toBottomOf="@+id/imgSubject"
        app:layout_constraintEnd_toEndOf="@+id/imgSubject"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/imgSubject"
        app:layout_constraintTop_toTopOf="@+id/imgSubject"
        app:layout_constraintVertical_bias="0.769" />

    <ImageView
        android:id="@+id/ivlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgSubject"
        app:layout_constraintTop_toTopOf="@+id/imgSubject"
        app:layout_constraintVertical_bias="0.769"
        app:srcCompat="@drawable/baseline_location_on_24" />

</androidx.constraintlayout.widget.ConstraintLayout>